<div {{bind-attr class="active :introjs-tooltipReferenceLayer" style=helperLayerCss}}>
    <div class="introjs-tooltip" {{bind-attr style=tooltipCss}}>
        <a class="tour-end icon-times" {{action 'exitTour'}}></a>
        <span class="introjs-helperNumberLayer" style="display:none">1</span>
        <div {{bind-attr class=":tour-arrow top right bottom left"}} style="display: inherit;"></div>
        <div class="tour-body" {{bind-attr style=tourStopBodyCss}}>
            <div class="row">
                <div class="col-sm-12">
                  {{{model.intro}}}
                </div>
            </div>
          {{yield}}
        </div>
    </div>
</div>
